{
  "compilerOptions": {
    "outDir": "dist",
    "module": "nodenext",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*"
  ]
}